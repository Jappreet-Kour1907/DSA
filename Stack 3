#include<stdio.h>
#include<stdlib.h>
#define MAX 100
int stack1[MAX];
int stack2[MAX];
int top1 = -1, top2 = -1;
void push1(int value){
    if(top1 == MAX-1){
        printf("Overflow\n");
    }
    else{
        stack1[++top1] = value;
    }
}
void push2(int value){
    if(top2 == MAX-1)
        printf("Overflow\n");
    else{
        stack2[++top2] = value;
    }
}
int pop1(){
    if(top1 == -1){
        printf("Underflow\n");
        return -1;
    }
    else{
        int val = stack1[top1];
        top1--;
        return val;
    }
}
int pop2(){
    if(top2 == -1){
        printf("Underflow\n");
        return -1;
    }
    else{
        int val = stack2[top2];
        top2--;
        return val;
    }
}
int peek1(){
    if(top1 == -1){
        printf("Underflow\n");
        return -1;
    }
    else{
        return stack1[top1];
    }
}
int peek2(){
    if(top2 == -1){
        printf("Underflow\n");
        return -1;
    }
    else{
        return stack2[top2];
    }
}
void display1(){
    if(top1 == -1){
        printf("Underflow\n");
    }
    else{
        for(int i=top1; i>=0; i--){
            printf("%d\n", stack1[i]);
        }
    }
} 
void display2(){
    if(top2 == -1){
        printf("Underflow\n");
    }
    else{
        for(int i=top2; i>=0; i--){
            printf("%d\n", stack2[i]);
        }
    }
} 
int main(){
    int choice, val, res, s;
    while(1){
        printf("1. Push\n");
        printf("2. Pop\n");
        printf("3. Peek\n");
        printf("4. Display Stack1\n");
        printf("5. Display Stack2\n");
        printf("6. Exit\n");
        printf("Enter Choice: ");
        scanf("%d", &choice);
        switch (choice){
            case 1:
                printf("Enter Stack Number(1-2): ");
                scanf("%d", &s);
                printf("Enter Value : ");
                scanf("%d", &val);
                if(s == 1)
                    push1(val);
                else if(s == 2)
                    push2(val);
                else
                    printf("\nInvalid Stack Number\n");
                break;
            case 2:
                printf("Enter Stack Number(1-2): ");
                scanf("%d", &s);
                if(s == 1){
                    res = pop1();
                    if(res != -1)
                        printf("\n%d pop from Stack1\n", res);
                }
                else if(s == 2){
                    res = pop2();
                    if(res != -1)
                        printf("\n%d pop from Stack2\n",res);
                }
                else 
                    printf("\nInvalid Stack Number\n");
                break;
            case 3:
                printf("Enter Stack Number(1-2): ");
                scanf("%d", &s);
                if(s == 1){
                    res = peek1();
                    if(res != -1)
                        printf("\n%d is at the top of the stack1\n",res);
                }
                else if(s == 2){
                    res = peek2();
                    if(res != -1)
                        printf("\n%d is at the top of the stack2\n",res);
                }
                else 
                    printf("\nInvalid Stack Number\n");
                break;
            case 4:
                display1();
                break;
            case 5:
                display2();
                break;
            case 6:
                exit(0);
                break;
            default:
                printf("\nInvalid Choice !!!\n");
        }
    }
    return 0;
}
